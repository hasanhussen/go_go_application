<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme used while app is launching -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Normal theme for the app after Flutter loads -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">#B20000</item>
        <item name="colorAccent">#FFFFFF</item>

        <!-- Optional text colors -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#666666</item>
    </style>
</resources>
